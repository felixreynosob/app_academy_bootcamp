<% cat_obj = Cat.find_by(id:params[:cat_id])  %>
<h1>Fill out the following to book <em><%= cat_obj.name %></em> the cat.</h1>

<img src="<%= cat_obj.picture_url %>" alt="profile picture" width="50" height="50" style="border-radius:50px;">
<br>
<form action="<%= cat_cat_rental_requests_url %>" method="post">

  <label for="start_date">Pick Up Date</label>
  <input type="date" id="start_date" name="cat_rental_request[start_date]" value="">
  <br>
  <label for="end_date">Drop Off Date</label>
  <input type="date" id="end_date" name="cat_rental_request[end_date]" value="">
  <br>
  <input type="submit" value="submit request">
</form>
