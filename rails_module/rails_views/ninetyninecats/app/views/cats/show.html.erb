<table>
  <thead>
    <tr>
      <th>Cat Profile</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><img src="<%= @cat.picture_url %>" alt="profile picture" width="50" height="50" style="border-radius:50px;"></td>
    </tr>
    <tr>
      <td>Name</td>
      <td><%= @cat.name %></td>
    </tr>
    <tr>
      <td>Age</td>
      <td><%= @cat.age %></td>
    </tr>
    <tr>
      <td>Color</td>
      <td><%= @cat.color %></td>
    </tr>
    <tr>
      <td>Sex</td>
      <td><%= @cat.sex == 'm'? "Male" : "Female"%></td>
    </tr>
    <tr>
      <td>Description</td>
      <td><%= @cat.description %></td>
    </tr>
  </tbody>
</table>
<a href="<%=cats_url%>">return</a>

